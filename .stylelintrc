{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-pseudo-class-no-unknown": [ true, {
      "ignorePseudoClasses": [
        "global", "local"
      ]
    }],
    "property-no-unknown": [ true, {
      "ignoreProperties": [
        "composes",
        "min-font-size",
        "max-font-size",
        "lower-font-range",
        "upper-font-range",
      ]
    }],
  }
}
